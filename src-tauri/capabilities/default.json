    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "dialog:default",
        {
            "identifier": "opener:allow-open-url",
            "allow": [
                {
                    "url": "https://github.com/mak-kirkland/chronicler/"
                },
                {
                    "url": "https://patreon.com/ChroniclerNotes"
                },
                {
                    "url": "https://buymeacoffee.com/chronicler"
                }
            ]
        },
        "opener:default"
    ]
}
