{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "dialog:default",
        "opener:default",
        "updater:default",
        "updater:allow-check",
        "updater:allow-download-and-install",
        "process:allow-restart",
        "process:allow-exit",
        "store:default",
        "fs:default",
        "fs:allow-read-text-file",
        "fs:allow-resource-read-recursive"
    ]
}
